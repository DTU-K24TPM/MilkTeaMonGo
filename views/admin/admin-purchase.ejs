<%- include('../layouts/adminHeader1') %>

<section>
    <div class="wrapper">
        <div class="body-slide-profile-body">
            <div class="main-container">
                <div class="col-9 wrap-profile user-admin">
                    <div class="profile-frame-ad">
                        <br />
                        <div class="head-profile-frame-admin">
                            <div class="head-title" style="font-weight: 500; font-size: 24px;">QUẢN LÝ TẤT CẢ SẢN
                                PHẨM
                            </div>
                            <div class="head-search-item">
                                <form class="search-dh search-item-admin">
                                    <input type="text" placeholder="Tìm kiếm sản phẩm" name="search">
                                    <button type="submit"><i class="fa fa-search"></i></button>
                                </form>
                            </div>
                        </div>
                        <div class="head-select-item">
                            
                            <div class="dropdown">
                                <button class="btn btn-status-admin dropdown-toggle" type="button"
                                    id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                    Tình trạng
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li><a class="dropdown-item" href="#">Tất Cả</a></li>
                                    <li><a class="dropdown-item" href="#">Chờ xác nhận</a></li>
                                    <li><a class="dropdown-item" href="#">Chờ lấy hàng</a></li>
                                    <li><a class="dropdown-item" href="#">Đang giao</a></li>
                                    <li><a class="dropdown-item" href="#">Đã giao</a></li>
                                    <li><a class="dropdown-item" href="#">Đã hủy</a></li>
                                </ul>
                            </div>
                            <div class="period-order">
                                <label>Từ</label>
                                <input type="datetime-local" id="time-from">
                                <label>Đến</label>
                                <input type="datetime-local" id="time-to">
                            </div>


                            <button id="btn-print"><i class="fa fa-print" aria-hidden="true"></i> In</button>
                        </div>



                        <table class="table-admin">
                            <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Thời gian</th>
                                    <th scope="col">Tình trạng</th>
                                    <th scope="col">Khách hàng</th>
                                    <th scope="col">Người nhận</th>                                   
                                    <th scope="col">Tổng tiền</th>
                                    <th scope="col">Tác vụ</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%bills.forEach(function(bill){ %>
                                    <tr>
                                        <th scope="row"><%=bill._id%></th>
                                        <td><%=bill.createAt.toUTCString()%></td>
                                        <td>
                                            <select name="status-order" class="select-status">
                                                <option value="none">--Tình trạng--</option>
                                                <option value="cho-xac-nhan">Chờ xác nhận</option>
                                                <option value="cho-lay-hang">Chờ lấy hàng</option>
                                                <option value="dang-giao">Đang giao</option>
                                                <option value="Da giao">Đã giao</option>
                                                <option value="Da huy">Đã hủy</option>
                                            </select>
                                        </td>
                                        <td><%=bill.email%></td>
                                        <td><%=bill.name%></td>
                                        <td><%=bill.totalPrice%></td>
                                        
                                        <td style="display: flex;justify-content: space-around;">
                                            <button class="info-order"><i class="fa fa-info-circle"
                                                    aria-hidden="true"></i>
                                            </button>
                                            <a><button type="button" class="btn-close btn-xoa btn-xoa-dh"
                                                    aria-label="Close"></button></a>
    
                                            <div id="modal-info-order" class="modal">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Chi tiết đơn hàng</h5>
                                                        <button type="button" class="btn-close close-footer-info"
                                                            aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="admin-each-order">
                                                            <div class="time-order">
                                                                <span class="address-order">Địa chỉ nhận hàng</span>
                                                                <span style="font-weight: 500;"> <%=bill.name%>
                                                                        </span>
                                                                <span>
                                                                    <%=bill.address%>
                                                                </span>
                                                                <span>
                                                                    <%=bill.phone%>
                                                                </span>
                                                            </div>
                                                            <%bill.cart.forEach(function(c){ %>
                                                                <div class="admin-dh">
                                                                    <div class="row admin-detail-order-list">
                                                                        
                                                                        <div class="col-1 img-ad-pur">
                                                                            <img class="img-order-list" src=<%=c.image%>>
                                                                        </div>
                                                                        <div class="col-9 text-ad-pur" style="padding-left: 2rem;">
                                                                            <div class="name-order-list"><%=c.title%>
                                                                            </div>
                                                                            <div class="total-order-list">x <%=c.quantity%></div>
                                                                            <div class="top-total">
                                                                                Size M
                                                                            </div>
                                                                           <div class="top-total">
                                                                               Trân châu trắng
                                                                           </div>
                                                                        </div>
        
                                                                        <div class="col-2">
                                                                            <div class="price-order-list"><%=c.price%> VNĐ</div>
                                                                        </div>
                                                                    </div>
        
                                                                </div>
                                                            <% }) %>
                                                            
                                                            <div class="admin-total-order">
                                                                <div class="admin-price-order">Tổng số tiền: <%=bill.totalPrice%> VNĐ
                                                                </div>
                                                                <div class="footer-order">
                                                                    <div class="time-order">
                                                                        <span>Đơn hàng được đặt
                                                                            vào lúc <%=bill.dateVN%></span>                                                                        
                                                                        <span class="admin-ghichu">Ghi chú: <%=bill.note%></span>
                                                                    </div>
                                                                </div>
    
                                                            </div>
                                                        </div>
                                                    </div>
    
                                                    <div class="modal-footer">
                                                        <button type="button"
                                                            class="btn btn-secondary close-footer-info">Đóng</button>
    
                                                    </div>
                                                </div>
                                            </div>
    
                                        </td>
                                    </tr>
                                <%}) %>                                
                                
                            </tbody>                           
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="/js/jquery-3.6.0.min.js"></script>
<script src="/js/bootstrap.min.js"></script> 
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="/js/bootstrap.bundle.min.js"></script> 
<script src="/js/admin-quanly.js"></script>


</body>
<%- include('../layouts/footer') %>