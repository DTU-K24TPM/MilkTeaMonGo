<%- include ('../layouts/header') -%>
<br />
<br />
<div class="wrapper">
        <!-- Messenger Plugin chat Code -->
    <div id="fb-root"></div>

    <!-- Your Plugin chat code -->
    <div id="fb-customer-chat" class="fb-customerchat">
    </div>

    <script>
      var chatbox = document.getElementById('fb-customer-chat');
      chatbox.setAttribute("page_id", "630346033643094");
      chatbox.setAttribute("attribution", "biz_inbox");
    </script>

    <!-- Your SDK code -->
    <script>
      window.fbAsyncInit = function() {
        FB.init({
          xfbml            : true,
          version          : 'v13.0'
        });
      };

      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = 'https://connect.facebook.net/vi_VN/sdk/xfbml.customerchat.js';
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    </script>
        <div class="container">
            <div class="row">
                <div class="menu-title">
                    <h2>MENU</h2>
                    <div class="span-line"></div>
                </div>
            </div>
            <div class="row" style="justify-content: center;">
                <div class="col-xl-12 col-lg-12 col-md-10 col-sm-10 ">
                    <ul class="list-menu-ul">
                        <li class="li-center"><a href="/product" class="list-menu-a">ALL</a></li>
                        <% categories.forEach(function(cat){ %>
                            <li class="li-center"><a href="/product/category/<%= cat.slug%>" class="list-menu-a"><%= cat.title %></a></li>
                        <% }); %>
                    </ul>
                </div>
            </div>
        </div>
        

            
            <div class="list-item">
                <% if (products.length != 0){ %>
                <% products.forEach(function(product){ %>
                    <% if (product.block==1){ %>
                        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 col-xs-12 css-hethang">
                        
                            <a href="/product/<%= product.slug %>">
                                
                                    <div class="out-item">Tạm hết hàng</div>
                                <img src="<%= product.image %>" class="img-item">
                        
                                <h5><%= product.title %> </h5>
                                <% var price= String(product.price).replace(/(?<!\..*)(\d)(?=(?:\d{3})+(?:\.|$))/g, '$1,') %>
                                <h6><%= price %>đ</h6>
                            </a>
                        </div>
                    <% }else { %>
                        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        
                            <a href="/product/<%= product.slug %>">
                                
                                <img src="<%= product.image %>" class="img-item">
                        
                                <h5><%= product.title %> </h5>
                                <% var price= String(product.price).replace(/(?<!\..*)(\d)(?=(?:\d{3})+(?:\.|$))/g, '$1,') %>
                                <h6><%= price %>đ</h6>
                            </a>
                        </div>
                    <%} %>
                    
                <% }); %>
                <% } else { %>
                    <div class="nothing" style="margin-top:30px">
                        <img class="img-empty" src="/img/shop.png" style="width:20%; margin-bottom: 15px;">
                        <h3 class="text-center">KHÔNG TÌM THẤY SẢN PHẨM NÀO</h3>
                    </div>
                <% } %>
            </div>
        </div>


 
</div>
<%- include ('../layouts/footer') -%>